#!/bin/bash

# Base URL for Pokémon API
BASE_URL="https://pokeapi.co/api/v2/pokemon/"

# Specific Pokémon to fetch
POKEMON_NAME="pikachu"

# Output and error files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Full API URL
FULL_URL="${BASE_URL}${POKEMON_NAME}"

# Make the API request
curl -s -f "$FULL_URL" -o "$OUTPUT_FILE"

# Check if curl command succeeded
if [ $? -ne 0 ]; then
    echo "[$(date)] Failed to fetch data from $FULL_URL" >> "$ERROR_FILE"
    echo "An error occurred. Check $ERROR_FILE for details."
else
    echo "Data successfully saved to $OUTPUT_FILE"
fi

